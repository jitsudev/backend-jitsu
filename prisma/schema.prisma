model User {
  id      Int      @id @default(autoincrement())
  name        String
  username    String
  email       String
  password    String
}

model Produto {
  id      Int      @id @default(autoincrement())
  title       String
  price       String
  discount    String
  description String
  base_sku    String
  category    String
  slug        String
}

model Categoria {
  id      Int      @id @default(autoincrement())
  title       String
}